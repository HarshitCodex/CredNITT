<%-include("partials/header")%>
<h1>This is the shops page!</h1>
<div class="container">
	<div class="row">
		<%shop.forEach(function(shop){%>
		<div class="col-md-4 col-sm-6">
			<div class="card text-center" style="width: auto; margin-bottom: 4px;">
				<img class="card-img-top" src="https://images.unsplash.com/photo-1587241321921-91a834d6d191?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80"
					alt="Shop Image">
				<div class="card-body" style="padding: 8px;">
					<h4 class="card-title"><%= shop.name %></h4>
					<p><%=shop.id%></p>
					<a href="/payment/<%=shop.id%>" class="btn btn-primary">Pay Here!</a>
				</div>
			</div>
		</div>
		<%});%>
	</div>
</div>
<%-include("partials/footer")%>