<%-include("partials/header")%>

<div class="container mt-4">
    <div class="row justify-content-center">

        <div class="col justify-content-md-center">
            <h3>SHOPS</h3>

            <table style="width:100%" class="card">

                <tr>
                    <th>Shop Name</th>
                    <th>Amount</th>
                </tr>
                <%shops.forEach(function(tns){%>
                <tr>
                    <td><%= tns.name%></td>
                    <td><%= tns.AccountBalance%></td>
                </tr>
                <%});%>
            </table>

            <form action="" method="post">
                <input type="submit" name="clear" value="CLEAR">
            </form>

        </div>




        <div class="col justify-content-md-center">
            <h3>USERS</h3>

            <table style="width:100%" class="card">

                <tr>
                    <th>User Name</th>
                    <th>Amount</th>
                </tr>
                <%users.forEach(function(tns){  if(!tns.isAdmin){%>
                <tr>
                    <td><%= tns.username%></td>
                    <td><%= tns.Balance%></td>
                </tr>
                <%}});%>
            </table>
            <form action="" method="post">
                <input type="submit" name="refill" value="REFILL">
            </form>

        </div>



    </div>
</div>


<%-include("partials/footer")%>